#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"


using namespace std;

void main()
{
	int  suma,n;
	float i;
	cout<<"ingrese el valor de n:";
	cin>> n;
	suma=0;
	cout<<"suma= ";
	for (i=2;i<=n;i=i+2)
		{
		cout<< i<<"+";
		suma=suma + i;
	}
	cout<<"la suma de los"<<n<<" enteros pares:" <<suma;
    getch();
}
